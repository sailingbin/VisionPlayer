<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardFeature"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:rippleColor="@color/primary"
    app:strokeWidth="1dp"
    app:strokeColor="@color/outline">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Icon -->
        <ImageView
            android:id="@+id/ivFeatureIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/icon_background"
            android:padding="12dp"
            android:contentDescription="@string/feature_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/primary"
            tools:src="@drawable/ic_folder_open_white_24dp" />

        <!-- Title and Description -->
        <TextView
            android:id="@+id/tvFeatureTitle"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/on_surface"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/ivArrow"
            app:layout_constraintStart_toEndOf="@id/ivFeatureIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvFeatureDescription"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="本地视频" />

        <TextView
            android:id="@+id/tvFeatureDescription"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="@id/tvFeatureTitle"
            app:layout_constraintStart_toStartOf="@id/tvFeatureTitle"
            app:layout_constraintTop_toBottomOf="@id/tvFeatureTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="浏览设备上的所有视频" />

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/navigate"
            android:src="@drawable/ic_arrow_forward_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>